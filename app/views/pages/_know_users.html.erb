<ul>
  <% unless @know_users.empty? %>
    <% @know_users.each do |user| %>
      <%= render "user", user: user %>
    <% end %>
    <% if @know_users.size >= Settings.load_more_user_size  %>
      <div class="users-load-more">
        <%= link_to "もっと見る", "#" %>
      </div>
    <% end %>
  <% else %>
    <p>
      <%= t :no_content %>
    </p>
  <% end %>
</ul>
